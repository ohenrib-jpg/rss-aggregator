{
  "name": "rss-aggregator",
  "version": "2.12.0",
  "description": "RSS Aggregator intelligent avec IA - Mode dual local/cloud",
  "type": "commonjs",
  "main": "server.js",
  "scripts": {
    "dev": "concurrently \"npm run dev:flask\" \"npm run dev:node\"",
    "dev:node": "cross-env NODE_ENV=development nodemon server.js",
    "start": "concurrently \"npm run start:flask\" \"npm run start:node\"",
    "dev:flask": "python app.py",
    "start:flask": "python app.py", 
    "start:node": "node server.js",
    "local": "cross-env NODE_ENV=development node server.js",
    "prod": "NODE_ENV=production node server.js",
    "flask": "python app.py",
    "node": "nodemon server.js",
    "test": "node test/health-check.js",
    "setup-local": "node scripts/setup-local.js",
    "install-deps": "npm install",
    "install-all": "npm install && pip install -r requirements.txt",
    "setup-llama": "powershell -File setup-llama.ps1",
    "launch-all": "start-geopol.bat"
  },
  "keywords": [
    "rss",
    "aggregator",
    "ai",
    "sentiment",
    "geopolitics"
  ],
  "author": "Olivier H. B.",
  "license": "MIT",
  "dependencies": {
    "axios": "^1.12.2",
    "body-parser": "^1.20.2",
    "concurrently": "^8.2.2",
    "cors": "^2.8.5",
    "d3": "^7.9.0",
    "express": "^4.18.2",
    "feedme": "^2.0.2",
    "nodemailer": "^6.9.7",
    "pg": "^8.11.3",
    "rss-parser": "^3.13.0"
  },
  "devDependencies": {
    "cross-env": "^10.1.0",
    "nodemon": "^3.0.1",
    "sqlite3": "^5.1.7"
  },
  "optionalDependencies": {
    "sqlite3": "^5.1.6"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  }
}
