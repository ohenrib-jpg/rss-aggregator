// üõ°Ô∏è MIDDLEWARE DE GESTION D'ERREURS CENTRALIS√âE, PARCE QUE HEIN BON
// ====================================================================

// Middleware pour les routes non trouv√©es
app.use('*', (req, res) => {
    console.warn(`üö´ Route not found: ${req.method} ${req.originalUrl}`);
    res.status(404).json({
        ok: false,
        error: 'Route not found',
        path: req.originalUrl,
        method: req.method,
        timestamp: new Date().toISOString()
    });
});

// Middleware global de gestion d'erreurs
app.use((err, req, res, next) => {
    console.error('üî• Unhandled Error:', {
        message: err.message,
        stack: err.stack,
        url: req.originalUrl,
        method: req.method,
        ip: req.ip,
        timestamp: new Date().toISOString()
    });

    // Erreurs de validation Joi/Mongoose
    if (err.name === 'ValidationError') {
        return res.status(400).json({
            ok: false,
            error: 'Validation Error',
            details: err.details || err.message
        });
    }

    // Erreurs d'authentification
    if (err.name === 'UnauthorizedError') {
        return res.status(401).json({
            ok: false,
            error: 'Authentication required'
        });
    }

    // Erreurs de base de donn√©es
    if (err.code === 'SQLITE_ERROR' || err.name === 'MongoError') {
        return res.status(503).json({
            ok: false,
            error: 'Database temporarily unavailable',
            message: 'Please try again later'
        });
    }

    // Erreurs Flask API
    if (err.message?.includes('Flask API') || err.config?.url?.includes('localhost:5000')) {
        return res.status(503).json({
            ok: false,
            error: 'AI service temporarily unavailable',
            message: 'Please try again later'
        });
    }

    // Erreur g√©n√©rique
    res.status(err.status || 500).json({
        ok: false,
        error: process.env.NODE_ENV === 'production' ? 'Internal server error' : err.message,
        ...(process.env.NODE_ENV === 'development' && { stack: err.stack })
    });
});

// Gestion des rejets de promesses non g√©r√©s
process.on('unhandledRejection', (reason, promise) => {
    console.error('üö® Unhandled Promise Rejection:', {
        reason,
        promise,
        timestamp: new Date().toISOString()
    });
});

// Gestion des exceptions non captur√©es
process.on('uncaughtException', (error) => {
    console.error('üí• Uncaught Exception:', {
        error: error.message,
        stack: error.stack,
        timestamp: new Date().toISOString()
    });
    process.exit(1);
});

