app.post('/api/themes/analyze-all', async (req, res) => {
    console.log('üéØ D√©marrage de l\'analyse des th√®mes en masse...');

    try {
        // 1. R√©cup√©rer tous les articles
        const articlesResult = await query(`
            SELECT id, title, content 
            FROM articles 
        `);

        // 2. R√©cup√©rer tous les th√®mes
        const themesResult = await query('SELECT * FROM themes');
        const themes = themesResult.rows;

        console.log(`üìä ${articlesResult.rows.length} articles √† analyser avec ${themes.length} th√®mes`);

        let analyzed = 0;
        let themesAssigned = 0;

        // 3. Analyser chaque article
        for (const article of articlesResult.rows) {
            try {
                const detectedThemes = detectThemes(article.content, article.title, themes);

                // Supprimer les anciennes associations
                await query('DELETE FROM theme_analyses WHERE article_id = ?', [article.id]);

                // Ajouter les nouvelles associations
                for (const theme of detectedThemes) {
                    await query(
                        'INSERT INTO theme_analyses (article_id, theme_id, confidence) VALUES (?, ?, ?)',
                        [article.id, theme.theme_id, theme.confidence]
                    );
                    themesAssigned++;
                }

                analyzed++;

                // Log de progression
                if (analyzed % 50 === 0) {
                    console.log(`‚úÖ ${analyzed}/${articlesResult.rows.length} articles analys√©s...`);
                }

            } catch (error) {
                console.error(`‚ùå Erreur sur l'article ${article.id}:`, error.message);
            }
        }

        console.log(`üéâ Analyse termin√©e: ${themesAssigned} associations th√®mes-articles cr√©√©es`);

        res.json({
            success: true,
            message: `Analyse th√®mes termin√©e: ${analyzed} articles trait√©s, ${themesAssigned} associations cr√©√©es`,
            analyzed,
            themesAssigned
        });

